@model Data.Models.BoardGame

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="container">
    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @Html.DisplayFor(model => model.Name)
                <small>Item Subheading</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!--  Item Row -->
    <div class="row">
            </div>
            <div class="col-md-8">
                <img class="img-responsive" src='@Url.Content($"~/Pics/{Model.ImagePath}")' alt="">
            </div>
            <div class="col-md-4">
                <h3>Description</h3>
                <p>@Html.DisplayFor(model => model.Description)</p>
                <h3>Game Details</h3>
                <ul>
                    <li>User: @Html.DisplayFor(model => model.Customer.username)</li>
                    <li>Original price: @Html.DisplayFor(model => model.Price)</li>
                </ul>
                <h3>Prefered games</h3>
                <ul>
                    <li>Bang</li>
                    <li>Game of thrones</li>
                </ul>
                @Html.ActionLink("Back", "Index", "Games", null, new { @class = "btn btn-danger" })
                @Html.ActionLink("Xchange", "Index", "Games", null, new { @class = "btn btn-success" })
            </div>
        </div>
    <!-- /.row -->
    <!-- Related  Row -->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">Related Games</h3>
        </div>
