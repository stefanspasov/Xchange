@model IEnumerable<Data.Models.BoardGame>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thumbnail Gallery</h1>
        </div>
        @foreach (var game in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                @Html.DisplayFor(guz => game.Name)
                <a class="thumbnail" href='@Url.Action("Details", "Games", new {id = game.Id})'>
                    <img class="img-responsive" src='@Url.Content($"~/Pics/{game.ImagePath}")' alt="">
                </a>
            </div>
        }
    </div>
    <hr>
</div>
<!-- /.container -->
<!-- jQuery -->
<script src="js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
